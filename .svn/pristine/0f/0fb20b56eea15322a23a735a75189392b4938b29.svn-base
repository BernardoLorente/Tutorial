<script type="text/javascript">
function createSelect(parentID){
	var parent = document.getElementById(parentID);//获取父元素
	number = parent.childNodes.length+1;

	var selected_value = document.getElementById('group').value;
	if(selected_value != 'counselor')
	{
		for (var i = 3; i >= 0; i--) 
		{
			var lastDiv = parent.lastChild;
			if (lastDiv != null)
			{
				parent.removeChild(document.getElementById(lastDiv.id));
			}
		};
		return;
	}

	var myDate = new Date();
	cur_year = myDate.getFullYear();

	for (var i = 3; i >= 0; i--) 
	{
		var  inputElement = document.createElement("input"); //创建input

		inputElement.type = "checkbox";
		inputElement.name = "grade[]";
		inputElement.id = "grade[]";
		inputElement.checked = cur_year;
		parent.appendChild(inputElement);//将div容器加入父元素

		var  DIV = document.createElement("div"); //创建input

		DIV.innerText = cur_year-i;
		parent.appendChild(DIV);
	};
}
</script>
