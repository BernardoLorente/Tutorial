class resources extends control
{
    /**
     * Construct function, load some modules auto.
     * 
     * @access public
     * @return void
     */
    public function __construct()
    {
        parent::__construct();
        $this->loadModel('user');
        $this->loadModel('tutor');
        $this->loadModel('personalinfo');
        $this->loadModel('task');
        $this->loadModel('student');
    }

    /**
     * The index page, locate to browse.
     * 
     * @access public
     * @return void
     */
    public function index()
    {
        $this->locate($this->createLink('resources', 'viewTeachers'));
    }

    /**
     * Browse bugs.
     * 
     * @param  int    $productID 
     * @param  string $browseType 
     * @param  int    $param 
     * @param  string $orderBy 
     * @param  int    $recTotal 
     * @param  int    $recPerPage 
     * @param  int    $pageID 
     * @access public
     * @return void
     */
    public function viewTeachers()
    {
        $teachers = $this->resources->getAllTeachers();
        $collegelist = $this->personalinfo->getCollegeList();

        $this->view->position     = $position;
        $this->view->teachers     = $teachers;
        $this->view->collegelist     = $collegelist;
        $this->display();
    }

    /**
     * view the details of a teacher. 
     * 
     * @param  int    $studentID 
     * @access public
     * @return void
     */
    public function viewTeacherDetails($teacher_account)
    {
        $students = $this->task->getTeamMembers($teacher_account);
        $teacher = $this->user->getByAccount($teacher_account);
        $userpairs = $this->user->getPairs('noletter');
        $achievements          = $this->loadModel('achievement')->getUserAchievements($teacher_account);
        $collegelist = $this->personalinfo->getCollegeList(); 

        $this->view->achievements    = $achievements;
        $this->view->teacher = $teacher;
        $this->view->userpairs = $userpairs;
        $this->view->students = $students;
        $this->view->collegelist     = $collegelist;
        $this->display();
    }

     /**
     * Browse bugs.
     * 
     * @param  int    $productID 
     * @param  string $browseType 
     * @param  int    $param 
     * @param  string $orderBy 
     * @param  int    $recTotal 
     * @param  int    $recPerPage 
     * @param  int    $pageID 
     * @access public
     * @return void
     */
    public function Sharing()
    {
        $filesList = $this->resources->getFilesByACL(3);
        $userpairs = $this->user->getPairs('noletter');
        foreach ($filesList as $file) 
        {
            if($file->ACL == 1 and $this->resources->checkPriv($file))
                $files[] = $file;
            elseif($file->ACL != 1)
                $files[] = $file;
        }

        $this->view->files = $files;
        $this->view->userpairs = $userpairs;
        $this->display();
    }

    /**
     * upload files.
     * 
     * @access public
     * @return void
     */
    public function upload()
    {
         if(!empty($_POST))
        {
            $this->resources->upload();
 
            die(js::locate($this->createLink('tutor', 'Sharing'), 'parent'));
        }

        $this->display();
    }
}
